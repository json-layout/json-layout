{
  "name": "@json-layout/vocabulary",
  "version": "0.0.0",
  "description": "Main JSON Layout vocabulary as JSON schemas and Typescript types. Also contains some small utility functions without any dependency.",
  "exports": {
    ".": {
      "require": {
        "default": "./dist/cjs/index.js",
        "types": "./dist/cjs/index.d.ts"
      },
      "import": {
        "default": "./dist/mjs/index.js",
        "types": "./dist/mjs/index.d.ts"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": ["src", "dist"],
  "scripts": {
    "test": "ts-mocha --type-check --paths 'test/**/*.spec.ts'",
    "build": "run-s clean build:cjs build:mjs",
    "clean": "rm -rf ./dist",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:mjs": "tsc -p tsconfig.mjs.json",
    "lint": "eslint . --fix",
    "compile": "ts-node scripts/compile.ts",
    "watch:schemas": "onchange -i -k 'src/**/*.json' -- npm run compile",
    "watch:src": "onchange -i -k --await-write-finish 500 'src/**/*.ts' 'test/**' -- run-p test build:mjs",
    "dev": "run-p watch:schemas watch:src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/json-layout/json-layout.git"
  },
  "keywords": [
    "json",
    "schema",
    "forms",
    "layout"
  ],
  "author": "Alban Mouton <alban.mouton@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/json-layout/json-layout/issues"
  },
  "homepage": "https://github.com/json-layout/json-layout#readme",
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "debug": "^4.3.4",
    "json-schema-traverse": "^1.0.0",
    "mitt": "^3.0.0",
    "rfdc": "^1.3.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/mocha": "^10.0.1",
    "camelcase": "^6.3.0",
    "eslint": "^8.35.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "json-schema-to-typescript": "^12.0.0",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
